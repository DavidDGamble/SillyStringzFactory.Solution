@{
  Layout = "_Layout";
}
@await Html.PartialAsync("Footer")

@using Factory.Models

<br>
<h2>Engineers</h2>

@if (@Model.Count == 0)
{
  <h4>No engineers have been added yet!</h4>
}
else
{
  <ul>
  @foreach (Engineer engineer in Model)
    {
      <li>@Html.ActionLink($"{engineer.Name}", "Details", "Engineers", new {id = engineer.EngineerId})</li>
    }
  </ul>
}
<p>@Html.ActionLink("Add a new engineer!", "Create", "Engineers")</p>