@{
  Layout = "_Layout";
}
@await Html.PartialAsync("Footer")

@using Factory.Models

<br>
<h2>Machines</h2>

@if (@Model.Count == 0)
{
  <h4>No machines have been added yet!</h4>
}
else
{
  <ul>
  @foreach (Machine machine in Model)
    {
      <li>@Html.ActionLink($"{machine.Name}", "Details", "Machines", new {id = machine.MachineId})</li>
    }
  </ul>
}
<p>@Html.ActionLink("Add a new machine!", "Create", "Machines")</p>